[global]

server.socket_host = '127.0.0.1'
server.socket_port = 3000
#log.screen = True

plugindir = "test/plugins"
samwebapi = "/sam/$EXPERIMENT"

tools.proxy.on = True

[samweb]

experiment = '$EXPERIMENT'
samweb-port = '8483'
authorized_base_url = 'https://$STATION_CLIENT_URL:8483'
instance-designation = 'samweb_zerg_$EXPERIMENT'

default_project_url = '/api/running/projects/'
file_access_schema_map = '/opt/sam/samweb_server/file_schema_mapping.json'
admin_users = ['illingwo','swhite', 'bjwhite']
station_urls = { '$EXPERIMENT' : 'https://$STATION_CLIENT_URL:8483/sam/$EXPERIMENT/stations/$EXPERIMENT' }

token_audience = ['https://wlcg.cern.ch/jwt/v1/any', 'https://samweb.fnal.gov']
token_issuers = ['https://test.cilogon.org/fermilab', 'https://test.cilogon.org/des', 'https://test.cilogon.org/dune', 'https://test.cilogon.org/gm2', 'https://test.cilogon.org/mu2e', 'https://test.cilogon.org/sbnd', 'https://cilogon.org/fermilab', 'https://cilogon.org/des', 'https://cilogon.org/dune', 'https://cilogon.org/gm2', 'https://cilogon.org/mu2e', 'https://cilogon.org/sbnd']

[database]

username = 'samdbs'
database = '$DB_DATABASE'
host = '$DB_HOST'
port = '$DB_PORT'
password = '$DB_PASS'

session_params = { 'join_collapse_limit' : 20, 'from_collapse_limit' : 20, 'random_page_cost' : 8, 'statement_timeout' : '50min', 'lock_timeout' : '5s' }

user_dimension_query_limit = {'default' : 5, 'illingwo' : 10, 'bjwhite' : 10}

[graphite]

server = 'lsdata.fnal.gov:2003'
